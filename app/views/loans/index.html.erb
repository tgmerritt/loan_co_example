<p id="notice"><%= notice %></p>
<%= link_to 'Dashboard', dashboard_index_path %>
<h1>Listing Loans</h1>

<table class="table">
  <thead>
    <tr>
      <th>Interest rate</th>
      <th>Interest rate period</th>
      <th>Balance</th>
      <th>Principal</th>
      <th>Loan period duration</th>
      <th>Loan period type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.interest_rate %></td>
        <td><%= loan.interest_rate_period %></td>
        <td><%= loan.balance %></td>
        <td><%= loan.principal %></td>
        <td><%= loan.loan_period_duration %></td>
        <td><%= loan.loan_period_type %></td>
        <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Loan', new_loan_path %>

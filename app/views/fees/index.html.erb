<p id="notice"><%= notice %></p>
<%= link_to 'Dashboard', dashboard_index_path %>
<h1>Listing Fees</h1>

<table class="table">
  <thead>
    <tr>
      <th>Origination fee</th>
      <th>Origination fee percent</th>
      <th>Maintenance fee</th>
      <th>Maintenance fee period</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fees.each do |fee| %>
      <tr>
        <td><%= fee.origination_fee %></td>
        <td><%= fee.origination_fee_percent %></td>
        <td><%= fee.maintenance_fee %></td>
        <td><%= fee.maintenance_fee_period %></td>
        <td><%= link_to 'Show', fee %></td>
        <td><%= link_to 'Edit', edit_fee_path(fee) %></td>
        <td><%= link_to 'Destroy', fee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fee', new_fee_path %>
